header.header
	.header-top
		.container
			.row
				.col-12
					.header-top__content
						.header-top__item
							-
								var list=[
									{text:'О нас'},
									{
										text:'Услуги',
										sublist:['parametr 1', 'parametr 2', 'parametr 3', 'parametr 4']
									},
									{text:'Оплата'},
									{
										text:'Каталог товаров',
										sublist:['parametr 1', 'parametr 2', 'parametr 3', 'parametr 4']
									},
								]
							ul.top-menu
								each item in list
									li.top-menu__item
										a(href="#").top-menu__link= item.text
											if(item.sublist)
												.top-menu__arr

										if(item.sublist)
											ul.top-menu__sub
												each subitem in item.sublist
													li.top-menu__sub-item
														a(href="#").top-menu__sub-link= subitem
				
						.header-top__item
							-
								var list=[
									{text:'Доставка'},
									{text:'Дизайнерам'},
									{text:'Акции'},
									{text:'Блог'},
									{text:'Контакты'},
								]
							ul.top-menu
								each item in list
									li.top-menu__item
										a(href="#").top-menu__link= item.text
											if(item.sublist)
												.top-menu__arr

										if(item.sublist)
											ul.top-menu__sub
												each subitem in item.sublist
													li.top-menu__sub-item
														a(href="#").top-menu__sub-link= subitem

