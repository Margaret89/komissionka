extends ../layout/main

block variables
	- var title = 'Главная';

block content
	section.top-slider.js-top-slider
		-
			var list=[
				{title:'Коллекция барной мебели в стиле', type:'Loft', img:'top-slide1.jpg'},
				{title:'Коллекция барной мебели в стиле 2', type:'Loft', img:'top-slide2.jpg'},
				{title:'Коллекция барной мебели в стиле 3', type:'Loft', img:'top-slide3.jpg'},
				{title:'Коллекция барной мебели в стиле 4', type:'Loft', img:'top-slide4.jpg'},
			]

		each item in list
			.top-slider__item
				.top-slider__img(style="background-image: url(/assets/img/"+item.img+")")
				.top-slider__content
					.container
						.row
							.col-sm-6.col-lg-5
								.top-slider__info
									.top-slider__title= item.title
									.top-slider__type= item.type
									a.btn.btn_border(href="#")
										span.btn__text Подробнее
								

	section.catalog-sect
		.container
			.row
				-
					var list=[
						{img:'catalog-sect1.jpg', text:'Мебель', col:'5'},
						{img:'catalog-sect2.jpg', text:'Свет', col:'4'},
						{img:'catalog-sect3.jpg', text:'Декор', col:'3'},
						{img:'catalog-sect4.jpg', text:'Посуда', col:'6'},
						{img:'catalog-sect5.jpg', text:'Инвентарь для ресторанов', col:'6'},
						{img:'catalog-sect6.jpg', text:'Текстиль', col:'3'},
						{img:'catalog-sect7.jpg', text:'Зеркала', col:'3'},
						{img:'catalog-sect8.jpg', text:'Распродажа', col:'3'},
						{img:'catalog-sect9.jpg', text:'Тестовая категория', col:'3'},
					]

				each item in list
					div(class="col-sm-"+item.col)
						a(href="#").catalog-sect__item
							.catalog-sect__img(style="background-image: url(/assets/img/"+item.img+")")
							.catalog-sect__text= item.text

	.container.d-none.d-sm-block
		.row
			.col-12
				hr

	section.slider-offer.d-none.d-sm-block
		.container
			.row
				.col-12
					.h1 Лучшие предложения

					
					+catalog-slider('sticker')

	section.offer.d-sm-none
		.container
			.row
				.col-12
					.h1 Лучшие предложения

					.catalog-list
						-
							var list=[
								{img:'slide-offer1.jpg', title:'Барный стул Stag темно-серое сидение', old_price:'15 900 руб.', price:'10 390 руб.', label:'Б/у'},
								{img:'slide-offer2.png', title:'Барный стул Viola SG 65 серо-коричневый', old_price:'15 900 руб.', price:'13 090 руб.', label:'new'},
								{img:'slide-offer3.png', title:'Барный стул Nina SG хром/белый', price:'5 760 руб.', label:'new'},
							]

						each item in list
							.catalog-list__item
								.catalog-list__img
									img(src="/assets/img/"+item.img, alt="")

									.catalog-list__sticker= item.label

									.catalog-list__action
										a(href="#").btn.btn_small.btn_shadow
											span.btn__text Заказать

										a(href="#").btn-star
											+svg('ic-star','ic-star', '25', '25')

								.catalog-list__content
									.catalog-list__title
										a(href="#")= item.title

									.catalog-list__price
										if(item.old_price)
											span.catalog-list__old-price= item.old_price
										span.catalog-list__cur-price= item.price

					.offer__more
						a(href="#") Показать больше
					

	section.services-wrap.bg-grey
		.container
			.row
				.col-12
					.services.js-services
						-
							var list=[
								{icon:'ic-master-class', width:'53', height:'53', title:'Мастер', title_second:'классы'},
								{icon:'ic-consulting', width:'50', height:'50', title:'Консалтинг', title_second:'HORECA'},
								{icon:'ic-restoration', width:'68', height:'48', title:'Реставрация', title_second:'мебели'},
								{icon:'ic-design', width:'47', height:'47', title:'Дизайнерские', title_second:'услуги'},
								{icon:'ic-calendar', width:'40', height:'40', title:'Расписание на фотосессии в интерьере'},
							]

						each item in list
							.services__item
								a(href="#").services__icon
									+svg(item.icon, item.icon, item.width, item.height)

								.services__title
									a(href="#")= item.title
										if(item.title_second)
											br
											= item.title_second


					.services-wrap__more
						a(href="#").btn.btn_border
							span.btn__text Показать все услуги

	section.news-wrap
		.container
			.row
				.col-12
					.h1 Последние новости

		
		.container
			.row
				.col-12
					-
						var list=[
							{img:'news1.jpg', title:'Столы, свет и новая коллекция Boho', text:'ТВ-тумбы со стеклянными фасадами, диваны-кровати, кофейные столики со столешницами под мрамор, подвесы в стиле лофт и много других новинок!'},
							{img:'news2.jpg', title:'Столы, свет и новая коллекция Boho', text:'ТВ-тумбы со стеклянными фасадами, диваны-кровати, кофейные столики со столешницами под мрамор, подвесы в стиле лофт и много других новинок!'},
							{img:'news3.jpg', title:'Столы, свет и новая коллекция Boho', text:'ТВ-тумбы со стеклянными фасадами, диваны-кровати, кофейные столики со столешницами под мрамор, подвесы в стиле лофт и много других новинок!'},
						]
					.news-list.js-news-list
						each item in list
							.news-list__item
								a(href="#").news-list__img-wrap
									span.news-list__img(style="background-image: url(/assets/img/"+item.img+")")

								.news-list__title
									a(href="#")= item.title

								.news-list__text= item.text

	.container.d-none.d-sm-block
		.row
			.col-12
				hr

	include ../components/about